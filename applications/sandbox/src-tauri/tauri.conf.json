{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "sandbox",
  "version": "0.1.0",
  "identifier": "com.artificialnatures.transmission.sandbox",
  "build": {
    "beforeDevCommand": "pnpm run --dir ../../../libraries/transmission.ui.solid build",
    "beforeBuildCommand": "pnpm run --dir ../../../libraries/transmission.ui.solid build",
    "frontendDist": "../../../libraries/transmission.ui.solid/dist"
  },
  "app": {
    "windows": [
      {
        "title": "sandbox",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
